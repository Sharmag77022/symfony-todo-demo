{% extends 'base.html.twig' %}

{% block title %}All Tasks{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-4">
        <h1>Task List</h1>
        
       
        </ul>
          {% if tasks|length == 0 %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">No tasks added yet</h5>
                <p class="card-text">Start adding tasks to your list!</p>
            </div>
        </div>
        {% else %}
        <ul class="list-group">
            {% for task in tasks %}
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5>{{ task.name }}</h5>
                        <p>{{ task.description }}</p>
                        <p>Date: {{ task.getDateTime()|date('Y-m-d')}}</p>
                    </div>
                    <div>
                        <input type="checkbox" {% if task.isCompleted() %}checked{% endif %}> <!-- Completed checkbox -->
                        <a class="btn btn-danger btn-sm ml-2" href="{{path('app_task_complete',{'id': task.id})}}">Delete</a> <!-- Delete button -->
                    </div>
                </div>
            </li>
        {% endfor %}

        {% endif %}
    </div>
{% endblock %}
