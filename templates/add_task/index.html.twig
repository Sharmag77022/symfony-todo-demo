{% extends 'base.html.twig' %}

{% block title %}Add Task{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="container">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Title', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter title'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter description'}}) }}
                </div>
                 <div class="form-group">
                    {{ form_label(form.date_time, 'Date & Time', {'label_attr': {'class': 'font-weight-bold'}}) }}
                    {{ form_widget(form.date_time, {'attr': {'class': 'form-control', 'placeholder': 'Enter Date'}}) }}
                </div>
                 <div class="form-group" style="display: none;">
                {{ form_label(form.is_completed) }}
                {{ form_widget(form.is_completed) }}
                </div>
</div>
                <button type="submit" class="btn btn-primary btn-block">Add Task</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
